#Modal_ProjectCreate.modal.fade(style='display: none;', aria-hidden='true', aria-labelledby='myModalLabel', role='dialog', tabindex='-1')
  .modal-dialog-yh
    .modal-content
        .modal-header
          button.close(aria-hidden='true', data-dismiss='modal', type='button') x
          h4#ProjectModalLabel.modal-title Add project information
        .modal-body-yh-1
          .widget-content-yh-1.form-horizontal
            .control-group
              .form-group
                input#projectName.form-control(type='text', placeholder='Input project name')
            .control-group
              .form-group
                select#department.form-control-yh
            #user_tree.check-div
        .modal-footer
          button.btn.btn-default(data-dismiss='modal', type='button') Close
          button#saveProject_id.btn.btn-primary(type='button') Save changes