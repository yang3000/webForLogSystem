extends ../mainpage/main
block content
  .page-content
      .content.container
        .row
          .col-lg-12
            h3.page-title
              | SYSTEM
              //small Statistics and more
        .row
          .col-lg-12
        .row
          .col-lg-6
            .widget.widget-table.action-table
              .widget-header
                i.icon-th-list
                h3 UserManagement
                a#open_model(style='float:right;margin-top:10px;margin-right:30px;height:20px;',data-target='#myModal21', data-toggle='modal', type='button')
                    i.icon-plus

              // /widget-header
              .widget-content
                table.table.table-striped.table-bordered
                  thead
                    tr
                      th(style='width:15px;')  Id
                      th(style='width:20%;')  Name
                      th(style='width:20%;')  UserName
                      th(style='width:25%;')  UserGroup
                      th(style='width:20%;').td-actions operator
                  tbody#tbody_user_data
                    //- var data = ['11', '111','111','11','11'];
                    - each skill in data
                      tr
                        td #{skill["rownum"]}
                        td #{skill["name"]}
                        td #{skill["userName"]}
                        td #{skill["groupName"]}
                        td.td-actions
                          a.btn.btn-small.btn-success(href='javascript:API_public.editUserDataById(#{skill["id"]});')
                            i.btn-icon-only.icon-ok
                          a.btn.btn-danger.btn-small(href='javascript:API_public.deleteUserDataById(#{skill["id"]});')
                            i.btn-icon-only.icon-remove
              .clearfix
                ul#page_id.pagination.no-margin
                  li.disabled
                    a#prev(href='javascript:API_public.queryPrevPage();') Prev
                  -var n=1;
                  while n <= page_count
                    if n == 1
                      li
                        a(style='background-color:rgba(0, 0, 0, 0.15)',href='javascript:API_public.queryUserDataByPage(#{n});') #{n}
                    else
                      li
                        a(href='javascript:API_public.queryUserDataByPage(#{n});') #{n}
                    - n++;
                  if page_count > 1
                    li
                      a#next(href='javascript:API_public.queryNextPage(#{page_count});') Next
                  else
                    li.disabled
                      a#next(href='javascript:API_public.queryNextPage(#{page_count});') Next
              // /widget-content
  include dilog3
  script(src='/javascripts/view_js/userManagement.js')